<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <title>Bootstrap demo</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN'
      crossorigin='anonymous'
    />
    <style>
      html {
        -webkit-print-color-adjust: exact;
      }
    </style>
        
  </head>
  <body>
    <div class='container'>
      <div class='container mt-5'>
        <div>
          <p class="py-0 mx-0 mb-1" style="font-weight: 600; ">Relatório</p>
          <div style="position: relative ;">
            <hr style="height: 1px;border: none; border-top: 1px solid #C5C1C1"/>
            <div style="width: 80px; text-align: center; height: 3px; left: 0px; bottom: 0px; position: absolute; background: #6174EE"></div>
          </div>
        </div>

        <div style="display: flex; justify-content: space-between;  padding: 0px; padding-top: 10px; padding-bottom: 10px;">
          <div style="color: black; font-size: 24px; font-family: DM Sans; font-weight: 400; word-wrap: break-word">01 Nov - 07 Dez</div>
            <div style="border-radius: 5px; border: 1px #C5C1C1 solid; display: flex; align-items: center; justify-content: space-between;">
              <div style="margin-left: 20px; margin-right: 20px; color: black; font-size: 12px; font-family: DM Sans; font-weight: 400; word-wrap: break-word">
                Útimo mês
              </div>
              <div style=" color: #9A9AA2; margin-right: 20px; font-size: 12px; font-family: DM Sans; font-weight: 400; word-wrap: break-word">
                1 Nov - 7 Dez, 2023
              </div>
            </div>             
        </div>
        <div style="display: flex; ">
          <div style="margin-right: 5rem;">
            <div style="color: #9A9AA1; font-size: 16px; font-family: DM Sans; font-weight: 400; word-wrap: break-word">Despesas Mensais</div>
            <div style="color: #656565; font-size: 20px; font-family: DM Sans; font-weight: 500; word-wrap: break-word">R$2.000</div>
          </div>

          <div style="margin-right: 5rem;">
            <div style="color: #9A9AA1; font-size: 16px; font-family: DM Sans; font-weight: 400; word-wrap: break-word">Entradas Mensais</div>
            <div style="color: #656565; font-size: 20px; font-family: DM Sans; font-weight: 500; word-wrap: break-word">R$2.000</div>
          </div>

           <div>
            <div style="color: #9A9AA1; font-size: 16px; font-family: DM Sans; font-weight: 400; word-wrap: break-word">Lucro</div>
            <div style="color: #656565; font-size: 20px; font-family: DM Sans; font-weight: 500; word-wrap: break-word">R$2.000</div>
          </div>

        </div>
      </div>
         <table class="table">
            <tbody>
                {{#each content}}
                    <tr>
                        <td>{{this.categoryName}}</td>
                        <td>{{this.total}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
       

        </table>
      </div>

    </div>

    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL'
      crossorigin='anonymous'
    ></script>
  </body>
</html>