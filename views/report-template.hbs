    <div style="margin-top: 2rem; margin-left: 1rem;">
      <p style="color: #444557; font-family: DM Sans; font-weight: 400; word-wrap: break-word;">Planejamento por
        categorias
      </p>
      <div
        style='margin-top: 1rem; height: 64px; background: #F2F2FF; border-left: 0.30px #C5C1C1 solid; border-top: 0.30px #C5C1C1 solid; border-right: 0.30px #C5C1C1 solid'>
        <div style="display: flex; justify-content: space-between; justify-self: center; padding: 0.5rem 1.5rem;">
          <p
            style="color: #9A9AA2; font-size: 18px; font-family: DM Sans; font-weight: 400; min-width: 150px;margin-top: 1rem; margin-left: 1.25rem;">
            Categoria
          </p>
          <p
            style="color: #9A9AA2; font-size: 18px; font-family: DM Sans; font-weight: 400; min-width: 150px; margin-left: rem;">
            Expectativa p/Categoria
          </p>
          <p
            style="color: #9A9AA2; font-size: 18px; font-family: DM Sans; font-weight: 400; min-width: 150px;margin-top: 1rem;  margin-left: 1.25rem;">
            Valor gasto
          </p>
          <p
            style="color: #9A9AA2; font-size: 18px; font-family: DM Sans; font-weight: 400; min-width: 150px;margin-top: 1rem;  margin-left: 2rem;">
            Status
          </p>

        </div>
      </div>

      <div
        style="align-items: center; border-left: 0.30px #C5C1C1 solid; border-right: 0.30px #C5C1C1 solid; border-bottom: 0.30px #C5C1C1 solid;">
        <div
          style='border-top: 0.30px #C5C1C1 solid; text-align: center; overflow-wrap: break-word; padding-block:1rem ;'>
          <div style="display: flex; justify-content: space-between;">
            <div style="display: block;" ;>

              {{#each planning.hasCategory}}
              <p style="font-size: 18px; color: #444557; font-family: DM Sans; font-weight: 400;  margin-left: 1.5rem;">
                {{this.category.name}}</p> {{/each}}


            </div>

            <div style="display: block;" ;>

              {{#each planning.hasCategory}}
              <p style="font-size: 18px; color: #444557; font-family: DM Sans; font-weight: 400;  margin-right: 1.25rem;">
                R${{this.valuePerCategory}}</p>
              {{/each}}


            </div>
            <div style="display: block;" ;>

              {{#each transaction}}

              <p style="font-size: 18px; color: #444557; font-family: DM Sans; font-weight: 400;  margin-right: 1.5rem;">R${{this}}</p>

              {{/each}}
            </div>

            <div style="display: block;" ;>

              {{#each transactionsCategoryStatus}}

              <p style="font-size: 18px; color: #444557; font-family: DM Sans; font-weight: 400;  margin-right: 1.5rem;">{{this}}</p>
              {{/each}}
            </div>

            {{!-- <p style="color: #444557; font-family: DM Sans; font-weight: 400;">{{this.valuePerCategory}}</p> --}}


          </div>

        </div>




      </div>

